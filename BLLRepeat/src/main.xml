<program xmlns="http://www.kinoma.com/kpr/1">

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<!-- HANDLERS -->
<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++ -->

    <handler path="/countResult">
        <behavior>
            <method id="onInvoke" params="handler, message">
                <![CDATA[
                	var count = JSON.parse( message.requestText ).count;
                    trace( "Count is: " + count + "\n" );
                    if ( count >= 10 ){
                    	var query = new Object();
                    	query.id = repeatID;
                    	
                    	var msg = new Message( "xkpr://shell/hardwarepins/stop?" + serializeQuery( query ) );
                    	handler.invoke( msg );
                    }
                ]]>
            </method>
        </behavior>
    </handler>    
    
<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<!-- BEHAVIORS -->
<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++ -->
    
    <behavior id="ApplicationBehavior">
    	<method id="onLaunch" params="content">
            <![CDATA[
                var query = new Object();
	            query.scriptPath = mergeURI( application.url, "Count.js" ).substring( 7 );
	            query.callback = "xkpr://" + application.id + "/countResult"
	            query.sendParamsOnce = true;
	            query.seconds = 1;
	            query.mseconds = 500;
	            query.skipFirst = true;            
	            
	            var msg = new Message( "xkpr://shell/hardwarepins/repeat?" + serializeQuery( query ) );
	            application.invoke( msg, Message.JSON );
            ]]>
        </method>
        
        <method id="onComplete" params="application, message, data">
            <![CDATA[
            	repeatID = JSON.parse( message.responseText ).id;         	
            ]]>
        </method>
    </behavior>
    
<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<!-- SCRIPTS -->
<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++ -->
    
    <script>
        <![CDATA[
        	var repeatID = 0;
            application.behavior = new ApplicationBehavior();
        ]]>
    </script>
</program>