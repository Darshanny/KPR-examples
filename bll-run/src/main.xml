<program xmlns="http://www.kinoma.com/kpr/1">
    
<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<!-- BEHAVIORS -->
<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++ -->

	<behavior id="ApplicationBehavior">
		<method id="onLaunch" params="content"><![CDATA[
            var message = new MessageWithObject("pins:configure", {
                greeter: {
                    require: "hello",
                    pins: {}
                }});
            application.invoke(message);

            message = new MessageWithObject("pins://greeter/ping", "Hello, world");
            application.invoke(message, Message.JSON);
		]]></method>
	
		<method id="onComplete" params="response"><![CDATA[
            trace("From BLL hello.js, application received: " + response.value + "\n");
		]]></method>
	</behavior>
    
<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<!-- SCRIPTS -->
<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++ -->
	
	<script><![CDATA[
		application.behavior = new ApplicationBehavior(); 
	]]></script>
</program>